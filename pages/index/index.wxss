.content{
  width: 100%;
  background-color: #f5f5f5;
  padding-bottom: 10px;
}
.order {
  width: 96%;
  margin-bottom: 20rpx;
  border-radius: 5px;
  margin:20rpx auto;
  background-color: #ffffff;
}
.orderstatus{
  background-color: #E02020;
  color: white;
  font-size: 14px;
  padding: 10px;
  border-radius: 5px 5px 0px 0;
}
.ordernum{
  font-size: 14px;
  padding: 10px;
  color:#333333 ;
}
.ordermoney{
  font-size: 14px;
  padding: 10px;
  color:#333333 ;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

