/* pages/login/login.wxss */

.navline {
  width: 100%;
  height: 400rpx;
  position: fixed;
  /* top: 10rpx; *//* background: #fff; *//* opacity: 0.5; */
}

.login-top {
  width: 100%;
  height: 400rpx;
  /* background:linear-gradient(to right,green,white); */
  background-color: #48b25a;
  margin-bottom: 100rpx;
}

.header {
  margin: 90rpx 0 90rpx 50rpx;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 200rpx;
  height: 200rpx;
  background-size: 100% 100%;
}

.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}

.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}

.login_input {
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #000;
  padding-left: 20rpx;
}

.login-btn {
  width: 90%;
  height: 90rpx;
  color: #fff;
  margin: 0 auto;
  border-radius: 50rpx;
  background-color: #48b25a;
}
