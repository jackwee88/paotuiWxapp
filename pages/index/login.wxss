/* pages/login/login.wxss */

.navline {
  width: 100%;
  height: 400rpx;
  position: fixed;
  /* top: 10rpx; *//* background: #fff; *//* opacity: 0.5; */
}

.login-top {
  width: 100%;
  height: 400rpx;
  /* background:linear-gradient(to right,green,white); */
  background-color: #48b25a;
  margin-bottom: 100rpx;
}

.header {
  margin: 90rpx 0 90rpx 50rpx;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 200rpx;
  height: 200rpx;
  background-size: 100% 100%;
}

.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}

.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}

.login_input {
  width: 90%;
  height: 80rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #000;
  padding-left: 20rpx;
}

.login-btn {
  width: 100px;
  height: 90rpx;
  color: #fff;
  margin: 0 auto;
  background-color: #48b25a;
  margin-left: 10px;

}
.login{
  display: flex;
  flex-direction: row;
  padding: 0 20px;
  box-sizing: border-box;
}
.cancel-btn{
  width: 100px;
  height: 90rpx;
  color: #333;
  margin: 0 auto;
  background-color: #f5f5f5;
  margin-left: 0;

}
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

.modalDlg{
  width: 580rpx;
  height: 620rpx;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 85rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.custom{
padding: 50rpx 0;
  justify-content:space-between;
}
.btn{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
}
